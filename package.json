{
  "name": "kansai-lt",
  "version": "1.0.0",
  "description": "PE-BANK関西支店の有志でライトニングトーク会をやりましょう。",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm-run-all build:*",
    "build:sass": "node-sass src/custom.scss docs/bundle.css",
    "watch:sass": "node-sass -w src/custom.scss docs/bundle.css",
    "build:js": "webpack src/custom.js --output-path=\"./docs\" --output-filename=\"bundle.js\" --mode=production",
    "watch:js": "webpack -w src/custom.js --output-path=\"./docs\" --output-filename=\"bundle.js\" --mode=development",
    "server": "browser-sync start --server \"docs\" --files \"docs/*\"",
    "start": "npm-run-all -p watch:* server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kazunori-Kimura/kansai-lt.git"
  },
  "keywords": [],
  "author": "kazunori.kimura.js@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kazunori-Kimura/kansai-lt/issues"
  },
  "homepage": "https://github.com/Kazunori-Kimura/kansai-lt#readme",
  "devDependencies": {
    "bootstrap": "^4.0.0",
    "browser-sync": "^2.23.6",
    "jquery": "^3.3.1",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "popper.js": "^1.12.9",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  }
}
